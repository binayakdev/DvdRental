@model IEnumerable<Semester2Coursework.Models.Loan>

@{
    ViewBag.Title = "MemberLoan";
}

<h2>MemberLoan</h2>

<div class="mt-5 mb-5 row">
    <div class="col-md-3">
        @using (Html.BeginForm())
        {
            <p>
                Find all by Last name or member number: <br />
                @Html.TextBox("searchString")
                <input type="submit" value="Search" />
            </p>

            
        }
    </div>
    <div class="col-md-8">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Albums.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Members.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IssueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReturnDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FineAmount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Albums.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Members.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IssueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FineAmount)
                    </td>
                </tr>
            }

        </table>

    </div>
</div>